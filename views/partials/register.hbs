<form action='/register' method='post'>
    <h1 class='h3 mb-3 font-weight-normal'>Create an account</h1>
	<input type='text' class='form-control' id='username' name='username' aria-describedby="usernameHelp" placeholder='Username' autofocus data-toggle='tooltip' data-placement='right' title='You can change your username later. 5~20 characters long, alphanumeric only.'>
    <input type='password' class='form-control' id='password' name='password' placeholder='Password' data-toggle='tooltip' data-placement='right' title='At least 8 characters long; max 30'>
    <button type='submit' class='btn btn-lg btn-primary btn-block'>Register</button>
</form>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
<script src='/js/validator.9.4.1.min.js'></script>
<script src='/js/input.js'></script>
<script>
    $(function() {
        $('[data-toggle="tooltip"]').tooltip()
        // client-side validation
        $(form).submit(function(e) {
            if (error = input.validate(
                $(this).find("input[type='text']").val(), 
                $(this).find("input[type='password']").val(),
                'test@example.com')) {
                alert(error)
                return false
            }
        })
    })
</script>
